//1st method---------
// nested loop
// n*n = n^2 time complexity

var i;
var j ;
var num =5;
var space = "&nbsp; &nbsp;"        // double space needed but  in  another language run in IDE , single space is okay .

for ( i = 1 ; i<=num ; i++){       //This is for  Row

    for (k = 1 ; k<=i ; k++)      // This is for column
    {
        document.write("*");

    }
    for (j=1 ; j<=(num-i);j++)    //This is also for column
    {
        document.write(space);        
    }  
    document.write("<br>");       

}


//////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////

//2nd method
// single loop
// n time complexity

var star ="*" ;
var i ;
var n =5 ;
for( i =1 ; i<=n ; i++ ){
    document.write(star.repeat(i));      //used repeat method  to iterate n times
    document.write("<br>");
}



/* Output will be -

*
**
***
****
*****
 
*/
